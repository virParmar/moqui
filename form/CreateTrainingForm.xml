<screen xmlns="http://moqui.org/xsd/screen-2.1">
    <widgets>
        <section>
            <label>Create Training</label>
            <form-single name="CreateTrainingForm" transition="createTraining">
                <auto-fields-entity entity-name="moqui.MoquiTrainingEntity" field-type="edit"/>
                <submit label="Create"/>
            </form-single>
        </section>
    </widgets>
    <actions>
        <transition name="createTraining">
            <service-call name="moqui.MoquiTrainingEntity.create" in-map="parameters"/>
            <default-response type="screen" url="FindMoquiTraining"/>
        </transition>
    </actions>
</screen>
